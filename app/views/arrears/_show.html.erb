<section id="rental-arrears" <%= "hidden" unless @claim.claim_rental_arrears %> >
  <h3>Rental arrears</h3>
  
  <div class="panel-default">
    <strong>Add rental arrears</strong>
    
    <div class="labeled-content">
      <div class="content-label">
        Rent due on
      </div>

      <div class="content">
        <div class="all-inline">calendar here 
          <%= button_to_add_fields "arrears", "Add arrears", f, :arrears %>
        </div> 


        <details>
          <summary>Did the defendant/s make any partial payments?</summary>
          <div class="all-inline">
            &pound<input type="text" />
          </div>
        </details>
      </div>

      </div>







    <div>
<p><a class="fake-link">About adding rental arrears</a></p>

    <div style="padding-top:10px;">
      <table id="arrears-table" class="govuk-table arrear-table" <%= "hidden" if @claim.arrears.empty? %> >
        <thead>
          <tr>
            <th>Rent due on</th>
            <th>Rental amount</th>
            <th>Amount paid</th>
            <th>Arrears</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="arrears-body">
          <%= f.simple_fields_for :arrears do |builder| %>
            <%= render "arrears/arrear_fields", :f => builder %>
          <% end %>
        </tbody>
      </table>
    </div>
    
    
    
  </div>
</div>
  <div class="panel-default">
          

              <%= f.label :unpaid_rent_per_day, "Unpaid rent should be calculated at" %>
              <div class="all-inline">
              <span>&pound
              <%= f.text_field :unpaid_rent_per_day, :label => false, input_html: { class: "testc"} %></span>
              a day
          </div>
          <div class="striped-choice">
            <div>
              <%= f.check_box :defendent_to_pay_for_claim %>
              <%= f.label :defendent_to_pay_for_claim, "Do you want to request that the defendent/s pay the cost of the claim" %>
            </div>
          </div> 

        </div>
</section>