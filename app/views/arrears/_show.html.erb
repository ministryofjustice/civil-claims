<div id="rental-arrears" <%= "hidden" unless @claim.claim_rental_arrears %> >
  <h3>Rental arrears</h3>
  
  <div class="well well-sm">
    <p>Add all payment arrears to the table below or <a href="#">upload a csv file</a></p>

    <div class="row">
      <div class="col-lg-3"><%= f.label :rent_due_date, "Rent due on" %></div>
      <div class="col-lg-8"><%= inline_date_input f, :rent_due_date %></div>
    </div>
    
    <br>

    <div>
      <%= f.label :contributions_this_month, "Did the defendant(s) make any contributions this month?" %><br />
      <div class="row">
        <div class="col-lg-5">
          <div class="input-group">
            <span class="input-group-addon">&pound</span>
            <%= f.input :contributions_this_month, label: false %>
          </div>
        </div>
      </div>
    </div>

    <br/>
    
    <div>
      <%= button_to_add_fields "arrears", "Add", f, :arrears %>
      <%= button_to_function "Cancel", "", :class => "btn btn-danger disabled" %>
    </div>
    <br />

    <div>
      <table id="arrears-table" class="table table-condenced" <%= "hidden" if @claim.attachments.empty? %> >
        <thead>
          <th>Rent due on</th>
          <th>Amount due</th>
          <th>Arrears</th>
          <th></th>
        </thead>
        <tbody id="arrears-body">
          <%= f.simple_fields_for :arrears do |builder| %>
            <%= render "arrears/arrear_fields", :f => builder %>
          <% end %>
        </tbody>
      </table>
    </div>

    <p>
      <a href="#">About adding rental arrears</a>
    </p>

  </div>
</div>