<%= simple_form_for( [@claim, claimant], remote: true, html: {class: 'form-horizontal person' } ) do |f| %>
  <%= f.input :title %>
  <%= f.input :full_name %>
  <%= f.input :phone %>
  <%= f.input :mobile %>
  <%= f.input :street_1 %>
  <%= f.input :street_2 %>
  <%= f.input :street_3 %>
  <%= f.input :town %>
  <%= f.input :county %>
  <%= f.input :postcode %>
  <%= submit_tag("SAVE") %>
  <%= submit_tag("CANCEL") %>
<% end %>