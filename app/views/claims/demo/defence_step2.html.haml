        %input#childbenefit-amount.pound(type='text' name='childbenefit-amount')
        %select#childbenefit-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week
      .row.hide.js-benefit-disabilityallowance
        %label(for='disabilityallowance-amount') Disability Living Allowance
        %input#disabilityallowance-amount.pound(type='text' name='disabilityallowance-amount')
        %select#disabilityallowance-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week
      .row.hide.js-benefit-employmentallowance
        %label(for='employmentallowance-amount') Employment and Support Allowance
        %input#employmentallowance-amount.pound(type='text' name='employmentallowance-amount')
        %select#employmentallowance-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week
      .row.hide.js-benefit-housingbenefit
        %label(for='housingbenefit-amount') Housing Benefit
        %input#housingbenefit-amount.pound(type='text' name='housingbenefit-amount')
        %select#housingbenefit-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week
      .row.hide.js-benefit-jobseekersallowance
        %label(for='jobseekersallowance-amount') Jobseeker's Allowance
        %input#jobseekersallowance-amount.pound(type='text' name='jobseekersallowance-amount')
        %select#jobseekersallowance-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week
      .row.hide.js-benefit-incomesupport
        %label(for='incomesupport-amount') Income Support
        %input#incomesupport-amount.pound(type='text' name='incomesupport-amount')
        %select#incomesupport-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week
      .row.hide.js-benefit-maternitypay
        %label(for='maternitypay-amount') Statutory Maternity Pay
        %input#maternitypay-amount.pound(type='text' name='maternitypay-amount')
        %select#maternitypay-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week
      .row.hide.js-benefit-taxcredits
        %label(for='taxcredits-amount') Tax Credits
        %input#taxcredits-amount.pound(type='text' name='taxcredits-amount')
        %select#taxcredits-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week
      .row.hide.js-benefit-other
        %label(for='other-amount') Other benefits
        %input#other-amount.pound(type='text' name='other-amount')
        %select#other-frequency.small
          %option(value='monthly') per month
          %option(value='weekly') per week

    .row.hide.js-pension
      %label(for='pension') State pension
      %input#pension.pound(type='text' name='pension')
      %select#pension-frequency.small
        %option(value='monthly') per month
        %option(value='weekly') per week
    .row
      %label(for='other-money-in') Any other money in
      %input#other-money-in.pound(type='text' name='other-money-in')
      %select#other-money-in-frequency.small
        %option(value='monthly') per month
        %option(value='weekly') per week
    .row
      .key
        %strong Total money in
      .value.total
        %span.pound &pound;
        %span.total 1850
        %span.frequency per month
    .row
      %a.help-link(href='#') About money in


