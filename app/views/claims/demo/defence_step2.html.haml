            %input#benefit-carersallowance.js-depend(type='checkbox' data-depend='benefit-carersallowance')
            %label(for='benefit-carersallowance') Carer's Allowance
          .row
            %input#benefit-childbenefit.js-depend(type='checkbox' data-depend='benefit-childbenefit')
            %label(for='benefit-childbenefit') Child Benefit
          .row
            %input#benefit-disabilityallowance.js-depend(type='checkbox' data-depend='benefit-disabilityallowance')
            %label(for='benefit-disabilityallowance') Disability Living Allowance
          .row
            %input#benefit-employmentallowance.js-depend(type='checkbox' data-depend='benefit-employmentallowance')
            %label(for='benefit-employmentallowance') Employment and Support Allowance
          .row
            %input#benefit-housingbenefit.js-depend(type='checkbox' data-depend='benefit-housingbenefit')
            %label(for='benefit-housingbenefit') Housing Benefit
          .row
            %input#benefit-jobseekersallowance.js-depend(type='checkbox' data-depend='benefit-jobseekersallowance')
            %label(for='benefit-jobseekersallowance') Jobseeker's Allowance
          .row
            %input#benefit-incomesupport.js-depend(type='checkbox' data-depend='benefit-incomesupport')
            %label(for='benefit-incomesupport') Income Support
          .row
            %input#benefit-maternitypay.js-depend(type='checkbox' data-depend='benefit-maternitypay')
            %label(for='benefit-maternitypay') Statutory Maternity Pay
          .row
            %input#benefit-taxcredits.js-depend(type='checkbox' data-depend='benefit-taxcredits')
            %label(for='benefit-taxcredits') Tax Credits
          .row
            %input#benefit-other.js-depend(type='checkbox' data-depend='benefit-other')
            %label(for='benefit-other') Other benefits
    %fieldset.striped-choice
