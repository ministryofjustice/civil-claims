.container
  %nav.progress
    %ol
      %li.active
        %span Personal details
      %li
        %span Case details
      %li
        %span Confirm details
      %li
        %span Pay court fee
      %li
        %span Confirmation

%header.content-header
  %h2 Step 1 - Personal details
  %p Fill in the address of the property you want to repossess and contact details for the landlords and tenants.

%section.property-details
  %h3.section-header Property details
  .moj-panel
    %form
      .row
        %label(for='property-postcode')> Postcode
        %input.has-button.smalltext#property-postcode(type='text' name='property-postcode')>
        %a.button.primary.js-find-address> Find UK address
      .row.rel.help-link
        %a.js-manual-address(href='#') Enter address manually
      %fieldset.striped-choice
        %legend Type of property
        .options
          .row
            %input#property-residential(type='checkbox')
            %label(for='property-residential') Residential
          .row
            %input#property-commercial(type='checkbox')
            %label(for='property-commercial') Commercial
      %fieldset.striped-choice
        %legend Who is in the property?
        .options
          .row
            %input#property-who-tenants(type='radio' name='property-who')
            %label(for='property-who-tenants') Tenants
          .row
            %input#property-who-squatters(type='radio' name='property-who')
            %label(for='property-who-squatters') Squatters
      .row.full
        %details
          %summary Would you like to provide a title number?
          .row
            %label(for='title-number') Title number
            %input.smalltext#title-number(type='text' name='title-number')
          .row.rel.help-link
            %a(href='#') About title numbers

%section.landlord-details
  %h3.section-header Landlord details
  .moj-panel
    %form
      .row
        %label(for='landlord-numlandlords')> Number of landlords
        %select.small#numlandlords(name='landlord-numlandlords')
          %option(value='1') 1
          %option(value='2') 2
          %option(value='3') 3
          %option(value='4') 4
          %option(value='5') 5
          %option(value='6') 6
          %option(value='7') 7
          %option(value='8') 8
          %option(value='9') 9
          %option(value='10') 10
      .row.divider
      .landlords-wrapper

%section.tenant-details
  %h3.section-header Tenant details
  .moj-panel
    %form
      .tenant1
        .row
          %label(for='tenant-numtenants') Number of tenants
          %select.small#numtenants(name='tenant-numtenants')
            %option(value='1') 1
            %option(value='2') 2
            %option(value='3') 3
            %option(value='4') 4
            %option(value='5') 5
            %option(value='6') 6
            %option(value='7') 7
            %option(value='8') 8
            %option(value='9') 9
            %option(value='10') 10
        .row.divider
        = render :partial => 'partials/tenant_form', :locals => {:grouping => 'tenant1'}


%script#landlord-template(type='text/x-handlebars-template')
  .sub-panel(class='landlord-form' id='{{grouping}}')
    .row
      %label(for='{{grouping}}-title')> Title
      %select.small(name='{{grouping}}-title' id='{{grouping}}-title')
        %option(value='') select
        %option(value='Mr') Mr
        %option(value='Mrs') Mrs
        %option(value='Miss') Miss
        %option(value='Ms') Ms
        %option(value='Dr') Dr
        %option(value='Other') Other
    .row.rel
      %label(for='{{grouping}}-fullname')> Full name
      %input(type='text' name='{{grouping}}-fullname' id='{{grouping}}-fullname')
    {{#unless additional}}
    .row.rel.street
      %label(for='{{grouping}}-address')> Street
      %textarea(name='{{grouping}}-address' id='{{grouping}}-address')
    .row.rel.town
      %label(for='{{grouping}}-town')> Town
      %input(type='text' name='{{grouping}}-town' id='{{grouping}}-town')
    .row.rel.postcode
      %label(for='{{grouping}}-postcode')> Postcode
      %input.has-button.smalltext(type='text' name='{{grouping}}-postcode' id='{{grouping}}-postcode')>
      %a.button.primary.js-find-address> Find UK address
    {{/unless}}
    {{#if additional}}
    %fieldset.rel.striped-choice
      %legend Address
      .options
        .row
          %input(type='radio' name='{{grouping}}-address' id='{{grouping}}-address-same')
          %label(for='{{grouping}}-address-same') Same as above
        .row
          %input(type='radio' name='{{grouping}}-address' id='{{grouping}}-address-different')
          %label(for='{{grouping}}-address-different') At a different address
    {{/if}}
    .row.rel
      %label(for='{{grouping}}-phone')> Phone
      %input(type='text' name='{{grouping}}-phone' id='{{grouping}}-phone')
    .row.rel
      %label(for='{{grouping}}-mobile')> Mobile
      %input(type='text' name='{{grouping}}-mobile' id='{{grouping}}-mobile')
    .row.rel
      %label(for='{{grouping}}-email')> Email
      %input(type='text' name='{{grouping}}-email' id='{{grouping}}-email')
    .row.rel.full
      %details
        %summary I would like to provide a DX number
        .row
          %label(for='{{grouping}}-dxnumber') DX number
          %input(type='text' name='{{grouping}}-dxnumber' id='{{grouping}}-dxnumber')
        .row.rel
          %label(for='{{grouping}}-dxexchange') DX exchange
          %input(type='text' name='{{grouping}}-dxexchange' id='{{grouping}}-dxexchange')

