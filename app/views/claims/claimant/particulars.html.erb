<%= render partial: 'claims/claimant/navigation' %>

<div>
  <div class="page-header">
    <h1>Step 2 of 6 - Claim particulars</h1>
  </div>

  <section id='edit-claim'>

    <p>Add all details you have about the claim and upload further information if required.</p>
    <a class="fake-link">About adding claim particulars</a>
  





  <%= simple_form_for @claim, url: claim_path(@claim) do |f| %>

    <article role="article">
  <!-- GROUNDS FOR POSSESSION -->
      <section id="grounds-for-possesion">
        <h3>Grounds for possession</h3>
        <div class="panel-default">
          
          <div class="striped-choice">
            <div>
              <%= f.check_box :non_payment_of_rent %>
              <%= f.label :non_payment_of_rent, "Non payment of rent" %>
            </div>
            <div>
              <%= f.check_box :anti_social_behaviour %>
              <%= f.label :anti_social_behaviour, "Anti-social behaviour" %>
            </div>
            <div>
              <%= f.check_box :property_misuse %>
              <%= f.label :property_misuse, "Misuse of property" %>
            </div>
            <div>
              <%= f.check_box :other_breach_of_tenancy, :onClick => "toggle_panel(this,'other-breach');" %>
              <%= f.label :other_breach_of_tenancy, "Other breach of tenancy" %>
            </div>
            <div id="other-breach" <%= "hidden" unless(@claim.other_breach_of_tenancy) %> >
              <%= f.label :other_breach, "Please specify" %>
              <%= f.text_area :other_breach, :rows => 3 %>
            </div>
          </div>

          <a class="fake-link">More about grounds for possession</a>
        </div>
      </section>

  <!-- STEPS ALREADY TAKEN -->
      <section id="steps-taken">
        <h3>Steps already taken</h3>
        <div class="panel-default">
          <strong>Types of notice served</strong>
          
          <div class="striped-choice">
            <div>
              <%= f.check_box :notice_to_quit, :onClick => "toggle_panel(this, 'notice-served-date');" %>
              <%= f.label :notice_to_quit, "Notice to quit" %>
            </div>
            <div id="notice-served-date" class="row" <%= "hidden" unless(@claim.notice_to_quit) %> >
              <div class="col-lg-3"><%= f.label :notice_served_date, "Date notice served" %></div>
              <div class="col-lg-8"><%= inline_date_input f, :notice_served_date %></div>
            </div>
            <div>
              <%= f.check_box :lease_breach %>
              <%= f.label :lease_breach, "Breach of lease" %>
            </div>
            <div>
              <%= f.check_box :seeking_possetion %>
              <%= f.label :seeking_possetion, "Seeking possesion" %>
            </div>
            <div>
              <%= f.check_box :other_recovery_steps_taken, :onClick => "toggle_panel(this,'other-recovery-steps');" %>
              <%= f.label :other_recovery_steps_taken, "Other recovery steps taken" %>
            </div>
            <div id="other-recovery-steps" <%= "hidden" unless(@claim.other_recovery_steps_taken) %> >
              <%= f.text_area :other_recovery_steps, :rows => 3 %>
              <%= f.label :other_recovery_steps, "Please specify" %>
            </div>
          </div>

          <a class="fake-link">More types of notices</a>
        </div>

      </section>


  <!-- THE NEXT STEPS -->
      <section id="next-steps">
        <h3>Next steps</h3>
        <div class="panel-default">
          <div class="striped-choice">
            <div>
              <%= f.check_box :claim_rental_arrears, :onClick => "toggle_panel(this,'rental-arrears');" %>
              <%= f.label :claim_rental_arrears, "Claim rent arrears" %>
            </div>
            <div>
              <%= f.check_box :lease_forfeiture %>
              <%= f.label :lease_forfeiture, "Forfeiture of the lease" %>
            </div>
          </div>

          <%= toggle_inline_help_link("Does, or will, the claim include any issues under the human rights act 1998",
            'The Human Rights Act 1998 (c 42) is an Act of Parliament of the United Kingdom which received Royal Assent on 9 November 1998, 
            and mostly came into force on 2 October 2000.[1] Its aim is to "give further effect" in UK law to the rights 
            contained in the Convention for the Protection of Human Rights and Fundamental Freedoms, but more commonly known as the European Convention on Human Rights. 
            The Act makes available in UK courts a remedy for breach of a Convention right, without the need to go to the European Court of Human Rights in Strasbourg.'
          ) %>

        </div>
      </section>

  <!-- ABOUT THE TENANCY -->
      <section id="about-tenancy">
        <h3>About the tenancy</h3>
        <div class="panel-default">
          
          <div class="inline-content">
            <div class="content-label">
              <%= f.label :tenancy_type %>
            </div>
            <div class="content">
              <%= f.input :tenancy_type, 
                label: false, 
                collection: ["Assured shorthold","Assured tenancy","Regulated"],
                selected: "Assured shorthold" %>
                
                <a class="fake-link">More about tenancy types</a>
              </div>
          </div>

          <div class="inline-content">
            <div class="content-label"><%= f.label :tenancy_start_date%></div>
            <div class="content">

              <%= f.date_field :tenancy_start_date, :label => false %>
            </div>
          </div>

          <div class="inline-content">
            <div class="content-label"><%= f.label :rental_amount%></div>
              <div class="content">
                 &pound <%= f.input :rental_amount, :label => false,required: true %>
              </div>
          </div>


   <!--        <div id="container">
    <span id="label"><p>song title</p></span>
    <span id="buttons">
      <a href="#" class="button88x31">edit</a>

      <a href="#" class="button88x31">delete</a>
    </span>
  </div> -->

          <div>
            <strong>Rent frequency</strong>
            <div class="striped-choice">
              <div>
                <%= f.radio_button(:property_type, 'monthly') %>
                <%= f.label :property_type_monthly, 'Monthly' %>
              </div>
              <div>
                <%= f.radio_button :property_type, 'fortnightly' %>
                <%= f.label :property_type_fortnightly, 'Fortnightly' %>
              </div>
              <div>
                <%= f.radio_button :property_type, 'week' %>
                <%= f.label :property_type_week, 'Week' %>
              </div>
            </div>

          </div>
        </div>
      </section>

  <!-- RENTAL ARREARS -->
      <%= render partial: 'arrears/show', :locals => { f: f } %>

  <!-- UNPAID RENT -->
      <section>
        <div class="panel-default">
          <div class="row">
            <div class="col-lg-3">
              <%= f.label :unpaid_rent_per_day, "Unpaid rent should be calculated at" %>
            </div>
            <div class="col-lg-3">
              <div class="input-group">
                <span class="input-group-addon">&pound</span>
                  <%= f.input :unpaid_rent_per_day, :label => false %>
              </div>
            </div>
            <div class="col-lg-2">
              per day
            </div>
          </div>
          <div class="striped-choice">
            <div>
              <%= f.check_box :defendent_to_pay_for_claim %>
              <%= f.label :defendent_to_pay_for_claim, "Do you want to request that the defendent/s pay the cost of the claim" %>
            </div>
          </div>
        </div>
      </section>

  <!-- OTHER INFORMATION -->
      <section>
        <div class="panel-default">
          <p>Any other information you would like to give about the claim</p>
          <%= f.text_area :other_information, :rows => 3 %>
        </diV>
      </section>

  <!-- SUPPORTING DOCUMENTTION -->
      <%= render partial: 'attachments/show', :locals => { f: f } %>

      <%= f.submit 'Save & Continue', :class => 'button medium' %>
      <a href="/" class="button-secondary">Close</a>

    </article>
    <% end %>

  </section>
</div>



