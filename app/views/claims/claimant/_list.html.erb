<ul class='claims' id='claims-list'>
  <% claims.each do |claim| %>
    <li class='clearfix'>
      <div class='claim_id'>
        <span class='title'>Claim</span>
        <span class='content'><%= claim.id %></span>
      </div>
      <div class='participants'>
        <span class='title'>Claimant/Defendant Names</span>
        <span class='content'><%= claim.claimants.first.full_name %> vs <%= claim.defendants.first.full_name %></span>
      </div>
      <div class='controls'>
         <span><%= link_to 'Continue', claim_path(claim), :class => 'button' %></span>
         <span><%= link_to 'Delete', claim_delete_path(claim), :class=> 'button-warning' %></span>
      </div>
    </li>
  <% end %>
</ul>