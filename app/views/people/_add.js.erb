<% options[:class] = 'well clearfix' %>
<% if 'Claimant' == person.type %>
  <% options[:save_button_text] = 'Add Landlord' %>
<% else %>
  <% options[:save_button_text] = 'Add Tenant' %>
<% end %>
myHtml = $.parseHTML('<%=j render partial: "people/edit", formats: [:html], locals: {claim: claim, person: person, options: options}  %>');
claim.validate(myHtml);
$('.person.<%= options[:type] %>').last().after(myHtml);
$('#add-additional-<%= options[:type] %>').remove();