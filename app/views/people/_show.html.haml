%div{ class: options[:class], id: "person-#{person.id}" }
  - if options[:title]
    %h5= options[:title]
  %span.name= person.display_name
  .address-linear
    = render partial: 'addresses/show', formats: [:html], locals: { address: person.address }
  - if options.has_key? :show_edit_link
    .toggle-editor
      = link_to "View/edit details", editor_claim_person_path( claim, person ), remote: true