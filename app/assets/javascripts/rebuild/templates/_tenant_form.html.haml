.sub-panel(class='#{grouping}')
  .row
    %label(for='#{grouping}-title') Title
    %select.small(name='#{grouping}-title' id='#{grouping}-title')
      %option(value='') select
      %option(value='Mr') Mr
      %option(value='Mrs') Mrs
      %option(value='Miss') Miss
      %option(value='Ms') Ms
      %option(value='Dr') Dr
      %option(value='Other') Other
  .row.rel
    %label(for='#{grouping}-fullname') Full name
    %input(type='text' name='#{grouping}-fullname' id='#{grouping}-fullname' placeholder='e.g. John Smith')
  %fieldset.striped-choice.rel
    %legend Address
    .options
      .row
        %input(type='radio' name='#{grouping}-location' id='#{grouping}-location-inproperty')
        %label(for='#{grouping}-location-inproperty') They are living in the property
      .row
        %input(type='radio' name='#{grouping}-location' id='#{grouping}-location-elsewhere')
        %label(for='#{grouping}-location-elsewhere') They are at another known address
      .row
        %input(type='radio' name='#{grouping}-location' id='#{grouping}-location-unknown')
        %label(for='#{grouping}-location-unknown') I don't know where they are
  .row.rel
    %label(for='#{grouping}-phone') Phone
    %input(type='text' name='#{grouping}-phone' id='#{grouping}-phone')
  .row.rel
    %label(for='#{grouping}-mobile') Mobile
    %input(type='text' name='#{grouping}-mobile' id='#{grouping}-mobile')
  .row.rel
    %label(for='#{grouping}-email') Email
    %input(type='text' name='#{grouping}-email' id='#{grouping}-email')
    